{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020"],
    "target": "ES2020",
    "allowJs": false,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./build",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/build/**",
    "rollup.config.js"
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "esModuleInterop": true
    }
  }
}
